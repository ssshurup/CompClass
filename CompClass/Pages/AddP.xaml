<Page x:Class="CompClass.Pages.AddP"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CompClass.Pages"
      mc:Ignorable="d" 
      Width="324" Height="314"
      Title="AddP" Background="White">

    <Grid>
        <ComboBox x:Name="ClassCB" HorizontalAlignment="Left" DisplayMemberPath="number" Margin="139,107,0,0" VerticalAlignment="Top" Width="120"/>
        <TextBlock HorizontalAlignment="Left" Margin="67,107,0,0" TextWrapping="Wrap" Text="Class" VerticalAlignment="Top"/>
        <CheckBox x:Name="StatusChB" Content="" HorizontalAlignment="Left" Margin="139,145,0,0" IsChecked="True" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="AddBT" Content="Add" HorizontalAlignment="Left" Margin="67,181,0,0" VerticalAlignment="Top" Width="111" Click="AddBT_Click"/>
        <Button x:Name="BackBT" Content="Back" HorizontalAlignment="Left" Margin="183,181,0,0" VerticalAlignment="Top" Width="76" Click="BackBT_Click"/>
        <TextBlock HorizontalAlignment="Left" Margin="67,144,0,0" TextWrapping="Wrap" Text="Status: on"  VerticalAlignment="Top"/>

    </Grid>
</Page>
